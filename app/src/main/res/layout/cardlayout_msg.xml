<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:id="@+id/cardview_msg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_msg"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/msg_user_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image_msg"
            android:textStyle="bold"
            android:text="John Doe"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/msg_message"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image_msg"
            android:text="Lorem ipsum dolor sit amet Lorem ipsum dolor sit ametLorem ipsum dolor sit ametLorem ipsum dolor sit amet"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_msg"
            android:layout_alignEnd="@+id/msg_message"
            android:paddingTop="5dp"
            android:text="Sent 09:10"
            android:textAlignment="center"
            android:textColor="#346cdb"
            android:textSize="10sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>