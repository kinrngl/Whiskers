<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountDisplayFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#1565C0"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/acct_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:fontFamily="@font/roboto"
            android:text="John Doe"
            android:textColor="#fff"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/acctdisplay_fname"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/person_blk"
            android:drawablePadding="20dp"
            android:text="John"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acctdisplay_lname"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acctdisplay_fname"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/person_blk"
            android:drawablePadding="20dp"
            android:text="Doe"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acctdisplay_email"
            android:layout_width="251dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/acctdisplay_lname"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="186dp"
            android:drawableLeft="@drawable/mail_blk"
            android:drawablePadding="20dp"
            android:text="johndoe@gmail.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acctdisplay_contact"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="160dp"
            android:drawableLeft="@drawable/phone_blk"
            android:drawablePadding="20dp"
            android:text="09222-1111"
            android:textSize="20sp" />

        <Button
            android:id="@+id/acctdisplay_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:background="@drawable/button_login"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/acctdisplay_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_login"
            android:text="Remove Account" />
    </RelativeLayout>

</FrameLayout>