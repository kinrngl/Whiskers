<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#81C784"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="158dp"
            android:layout_height="162dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pet_image"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/pet_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pet_name"
            android:layout_toRightOf="@+id/pet_image" />

        <TextView
            android:id="@+id/pet_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pet_breed"
            android:layout_toRightOf="@+id/pet_image" />

        <TextView
            android:id="@+id/pet_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pet_gender"
            android:layout_toRightOf="@+id/pet_image" />
    <Button
        android:id="@+id/pet_view"
        android:text="Chat Seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pet_image"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/pet_image"
       />

    </RelativeLayout>
</android.support.v7.widget.CardView>
