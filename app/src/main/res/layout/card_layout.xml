<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/card_view"
    android:layout_margin="15dp"
    android:padding="4dp"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:src="@drawable/usericon"/>

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pet_image"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Lorem Ipsum"/>

        <TextView
            android:id="@+id/pet_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pet_name"
            android:layout_toRightOf="@+id/pet_image"
            android:layout_marginLeft="8dp"
            android:text="Lorem Ipsum"/>

        <TextView
            android:id="@+id/pet_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pet_breed"
            android:layout_toRightOf="@+id/pet_image"
            android:layout_marginLeft="8dp"
            android:text="Lorem Ipsum"/>

        <TextView
            android:id="@+id/pet_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pet_gender"
            android:layout_toRightOf="@+id/pet_image"
            android:layout_marginLeft="8dp"
            android:background="@color/colorthemepink"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#000"
            android:text="Lorem Ipsum"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
