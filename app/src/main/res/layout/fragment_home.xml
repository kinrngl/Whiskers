<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp">

    <TextView
        android:id="@+id/titlefeature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Feature Pet"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardview_feature"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@id/titlefeature">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/pet_sumpet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorthemepink"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/pet_featureimg"
                    android:layout_width="70dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/user"/>

                <TextView
                    android:id="@+id/pet_featurename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/pet_featureimg"
                    android:paddingLeft="12dp"
                    android:text="John Doe"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pet_featurebreed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pet_featurename"
                    android:layout_toRightOf="@id/pet_featureimg"
                    android:paddingLeft="12dp"
                    android:text="Maltese Dog"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pet_featuretrans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pet_featurebreed"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/pet_featureimg"
                    android:background="@color/colorthemeyellow"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:text="SALE"
                    android:textColor="#f40c0c"
                    android:textSize="18sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/pet_featuremsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_blue"
                android:text="Message Owner" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</FrameLayout>