<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PetEntryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Add Pet Entry"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="Pet Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/pet_breed"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:hint="Breed"
        android:inputType="text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthdate"
        android:textSize="20sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="155dp"
        android:text="Gender"
        android:textColor="#000"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/pet_gender"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="290dp"
        android:text="Category"
        android:textColor="#000"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/pet_category"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="285dp" />

    <EditText
        android:id="@+id/pet_bday"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="100dp"
        android:hint="MM - DD - YYYY"
        android:inputType="date"/>

    <EditText
        android:id="@+id/pet_furcolor"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:hint="Fur Color"
        android:inputType="text"/>

    <EditText
        android:id="@+id/pet_eyecolor"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="170dp"
        android:hint="Eye Color"
        android:inputType="text"/>

    <Button
        android:id="@+id/pet_proceedAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Entry"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_login" />

    <EditText
        android:id="@+id/pet_desc"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="330dp"
        android:hint="Description"
        android:textAlignment="textStart" />

</FrameLayout>